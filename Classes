public class FireNomad implements Listener {

    public static HashMap<String, String> pclass = new HashMap<String, String>();

    @EventHandler
    public void onInvClick(InventoryCloseEvent event) {
    
        Player player = (Player) event.getPlayer();
        Player inventory pi = event.getInventory();
        if(pi.getHelmet() != null && pi.getChestPlate() != null && pi.getLeggings() != null && pi.getBoots() != null) {
            
            int h = pi.getHelmet().getTypeId();
            int c = pi.getChestPlate().getTypeId();
            int l = pi.getLeggings().getTypeId();
            int b = pi.getBoots().getTypeId();

            if(h == 306 && c == 307 && l == 308 && b == 309) {
                   
                    player.sendMessage(ChatColor.BLUE + "Wind " + ChatColor.DARK_BLUE + "class enabled.");
                    player.sendMessage(ChatColor.BLUE + "For all information on the " + ChatColor.DARK_BLUE + "Wind " + ChatColor.BLUE + "class type " + ChatColor.RED + "/class wind" + ChatColor.BLUE + ".");

@EventHandler
public void onInteract(PlayerInteractEvent event) {
    Player player = event.getPlayer();
 
    if (player.getItemInHand().getType() == Material.BLUE_DYE && (event.getAction() == Action.RIGHT_CLICK_AIR || event.getAction() == Action.RIGHT_CLICK_BLOCK)) {
        net.minecraft.server.EntityPlayer pl = (net.minecraft.server.EntityPlayer)((CraftPlayer)player).getHandle();
        if (pl.onGround) {
            player.addPotionEffect(new PotionEffect(PotionEffectType.SWIFTNESS, 0. 300));

player.sendMessage(ChatColor.RED + "[" + ChatColor.GOLD + "-" + ChatColor.RED + "] " + ChatColor.DARK_BLUE + "You activated " + ChatColor.BLUE + "Speed Cola" + ChatColor.DARK + " for" + ChatColor.BLUE + " 15 " + ChatColor.DARK_BLUE "seconds");
           
                        }
                    }
                }
            }
        }
    }
}
